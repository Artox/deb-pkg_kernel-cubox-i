#!/bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

KERNEL_LOCALVERSION=4.4.15-clearfog

case "$1" in
	configure)
	# create/update the initrd
	# if one exists already, update it
	if [ -e /boot/initrd.img-$KERNEL_LOCALVERSION ]; then
		update-initramfs -k $KERNEL_LOCALVERSION -u 2>/dev/null || true
	else
	# otherwise, create it
		update-initramfs -k $KERNEL_LOCALVERSION -c 2>/dev/null || true
	fi

	# set this kernel as boot kernel if none other is set or exists
	if ( [ ! -e "/boot/zImage" ] || ( [ -h "/boot/zImage" ] && [ ! -e "/boot/$(readlink /boot/zImage)" ] ) ) \
	|| ( [ ! -e "/boot/dtb" ] || ( [ -h "/boot/dtb" ] && [ ! -e "/boot/$(readlink /boot/dtb)" ] ) ); then
		ln -sfv zImage-$KERNEL_LOCALVERSION /boot/zImage
		ln -sfv initrd.img-$KERNEL_LOCALVERSION /boot/initrd
		rm -f /boot/dtb && ln -sv dtb-$KERNEL_LOCALVERSION /boot/dtb
	else
		echo "Notice: linux-image-$KERNEL_LOCALVERSION will not boot automatically!"
		echo "If desired, please update the symlinks zImage, initrd and dtb in /boot."
	fi

	# show warning when updating from pre-dtb-folder version
	if [ -e /boot.script ] && grep "/boot/[^/]*.dtb" /boot.script 1>/dev/null 2>/dev/null; then
		echo "WARNING: Your boot script does not use the new location for DTBs."
		echo "This means your system will not be able to boot linux-image-$KERNEL_LOCALVERSION!"
		echo "To boot this kernel, please update any occurence of /boot/<name>.dtb to /boot/dtb/<name>.dtb."
	fi
    ;;

	abort-upgrade|abort-remove|abort-deconfigure)
	# This is a curious case! prerm has already been executed, but postinst of any new version probably hasn't
	# do the minimum work required to get a consistent system:
	# recreate boot symlinks for this current version
	if ( [ ! -e "/boot/zImage" ] || ( [ -h "/boot/zImage" ] && [ ! -e "/boot/$(readlink /boot/zImage)" ] ) ) \
	|| ( [ ! -e "/boot/dtb" ] || ( [ -h "/boot/dtb" ] && [ ! -e "/boot/$(readlink /boot/dtb)" ] ) ); then
		ln -sfv zImage-$KERNEL_LOCALVERSION /boot/zImage
		ln -sfv initrd.img-$KERNEL_LOCALVERSION /boot/initrd
		rm -f /boot/dtb && ln -sv dtb-$KERNEL_LOCALVERSION /boot/dtb
	fi
	# ignore ramdisk (not strictly required, I hope)
	;;

	*)
	echo "postinst called with unknown argument \"$1\"" >&2
	exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
